{
	"name": "toy-soldiers",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "vite dev --host --open",
		"dev": "vite dev",
		"dev:back": "docker compose down && docker compose build && docker compose up -d",
		"dev:win": "docker compose down && docker compose build && docker compose up -d && deno run --allow-run --watch ./server/windows-pls.ts",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"l": "npm run format && npm run lint && npm run check"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.27.2",
		"@types/markdown-it": "^13.0.5",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.1",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.34.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.2",
		"svelte-check": "^3.5.2",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.5.0"
	},
	"type": "module",
	"dependencies": {
		"markdown-it": "^13.0.2",
		"zod": "^3.22.4"
	}
}
